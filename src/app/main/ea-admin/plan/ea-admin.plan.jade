mixin plans-to-finish
  .md-whiteframe-4dp.card
    table.dataTable.row-border.hover(datatable='ng' dt-options='vm.dpOptions')
      thead
        tr
          th.secondary-text
            .table-header
              span.column-title 名称
          th.secondary-text
            .table-header
              span.column-title 公司
          th.secondary-text
            .table-header
              span.column-title 创建者
          th.secondary-text
            .table-header
              span.column-title 上次操作
          th.secondary-text
            .table-header
              span.column-title 操作类型
          th.secondary-text
            .table-header
              span.column-title 原因
      tbody
        tr(ng-repeat='plan in vm.plansToFinish' ui-sref='app.ea-admin.plan.edit({planId: plan.planId})')
          td {{ plan.planName }}
          td {{ plan.companyName }}
          td {{ plan.creator }}
          td {{ plan.lastModified | humanize }}
          td {{ plan.opType }}
          td {{ plan.reason }}

#ea-admin-plan.page-layout.simple.fullwidth.doc-page.element-doc-page
  .header.md-accent-bg(layout='row' layout-align='space-between center')
    div(layout='column' layout-align='center start')
      .title 待处理测试计划
  
  md-content
    //- +basic-info
    +plans-to-finish